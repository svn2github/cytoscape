	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jaxb2-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>bookmarks</id>
						<configuration>
							<arguments>-nv</arguments>
							<packageName>cytoscape.bookmarks</packageName>
							<schemaFiles>bookmarks.xsd,xlinks-2001.xsd</schemaFiles>
							<staleFile>${project.build.directory}/generated-sources/jaxb/cytoscape/bookmarks/.staleFlag</staleFile>
							<clearOutputDir>false</clearOutputDir>
						</configuration>
						<goals>
							<goal>xjc</goal>
						</goals>
					</execution>
					<execution>
						<id>session</id>
						<configuration>
							<packageName>cytoscape.generated</packageName>
							<schemaFiles>cysession.xsd,xlinks-2001.xsd</schemaFiles>
							<staleFile>${project.build.directory}/generated-sources/jaxb/cytoscape/generated/.staleFlag</staleFile>
							<clearOutputDir>false</clearOutputDir>
						</configuration>
						<goals>
							<goal>xjc</goal>
						</goals>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>xerces</groupId>
						<artifactId>xercesImpl</artifactId>
						<version>2.8.1</version>
					</dependency>
				</dependencies>
			</plugin>
		</plugins>
