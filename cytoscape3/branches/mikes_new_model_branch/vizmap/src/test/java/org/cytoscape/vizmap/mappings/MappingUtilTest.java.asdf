import java.util.List;
import java.util.Map;


/**
 *
 */
public class MappingUtilTest extends TestCase {
	/**
	 * Creates a new MappingUtilTest object.
	 *
	 * @param name  DOCUMENT ME!
	 */
	public MappingUtilTest(String name) {
		super(name);
	}

	/**
	 *  DOCUMENT ME!
	 *
	 * @throws Exception DOCUMENT ME!
	 */
	public void testGetNodeAttributeType() throws Exception {
		assertEquals("non-existent attr ", MappingUtil.TYPE_UNDEFINED,
		             MappingUtil.getAttributeType("node", "mappingUtilTest"));

		// string test
		CyAttributesFactory.getCyAttributes("node").setAttribute("id", "mappingUtilTest", "test");
		assertEquals("string attr ", MappingUtil.TYPE_STRING,
		             MappingUtil.getAttributeType("node", "mappingUtilTest"));

		// int test
		CyAttributesFactory.getCyAttributes("node").setAttribute("id", "mappingUtilTest2", 20);
		assertEquals("int attr ", MappingUtil.TYPE_INTEGER,
		             MappingUtil.getAttributeType("node", "mappingUtilTest2"));

		// double test
		CyAttributesFactory.getCyAttributes("node").setAttribute("id", "mappingUtilTest3", 20.5);
		assertEquals("float attr ", MappingUtil.TYPE_FLOATING,
		             MappingUtil.getAttributeType("node", "mappingUtilTest3"));

		// boolean test
		CyAttributesFactory.getCyAttributes("node").setAttribute("id", "mappingUtilTest4", true);
		assertEquals("bool attr ", MappingUtil.TYPE_BOOLEAN,
		             MappingUtil.getAttributeType("node", "mappingUtilTest4"));

		// list test
		List<String> l = new ArrayList<String>();
		l.add("asdf");
		CyAttributesFactory.getCyAttributes("node").setListAttribute("id", "mappingUtilTest5", l);
		assertEquals("list attr ", MappingUtil.TYPE_SIMPLE_LIST,
		             MappingUtil.getAttributeType("node", "mappingUtilTest5"));

		// map test
		Map<String,String> m = new HashMap<String,String>();
		m.put("a", "b");
		CyAttributesFactory.getCyAttributes("node").setMapAttribute("id", "mappingUtilTest6", m);
		assertEquals("map attr ", MappingUtil.TYPE_SIMPLE_MAP,
		             MappingUtil.getAttributeType("node", "mappingUtilTest6"));

		// wrong baseKey 
		assertEquals("wrong base key", MappingUtil.TYPE_UNDEFINED,
		             MappingUtil.getAttributeType("junk", "mappingUtilTest2"));
	}

