	/**
	 *  DOCUMENT ME!
	 */
	public void testParseObject() {
		Object o = null;

		// test valid types
		o = MappingUtil.parseObjectType("1", MappingUtil.TYPE_INTEGER);
		assertTrue("int ", o instanceof Integer);
		o = null;

		o = MappingUtil.parseObjectType("1.75", MappingUtil.TYPE_FLOATING);
		assertTrue("double ", o instanceof Double);
		o = null;

		o = MappingUtil.parseObjectType("false", MappingUtil.TYPE_BOOLEAN);
		assertTrue("boolean ", o instanceof Boolean);
		o = null;

		o = MappingUtil.parseObjectType("homer", MappingUtil.TYPE_STRING);
		assertTrue("string ", o instanceof String);
		o = null;

		o = MappingUtil.parseObjectType("homer", MappingUtil.TYPE_SIMPLE_MAP);
		assertTrue("map ", o instanceof String);
		o = null;

		o = MappingUtil.parseObjectType("homer", MappingUtil.TYPE_SIMPLE_LIST);
		assertTrue("list ", o instanceof String);
		o = null;

		// test some failures
		o = MappingUtil.parseObjectType("homer", (byte) 75);
		assertTrue("non-existent type 75 ", o instanceof String);
		o = null;

		boolean caught = false;

		try {
			o = MappingUtil.parseObjectType("homer", MappingUtil.TYPE_INTEGER);
		} catch (NumberFormatException n) {
			caught = true;
		}

		assertTrue("caught number format excpetion", caught);
		o = null;
	}

